# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts should use LF
*.sh text eol=lf

# Windows scripts should use CRLF
*.ps1 text eol=crlf
*.bat text eol=crlf
*.cmd text eol=crlf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.conf text eol=lf
*.config text eol=lf
*.ini text eol=lf

# Terraform
*.tf text eol=lf
*.tfvars text eol=lf

# SQL files
*.sql text eol=lf

# Binary files
*.iso binary
*.vhd binary
*.vhdx binary
*.qcow2 binary
*.vmdk binary
*.jar binary
*.war binary
*.ear binary
*.class binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
